<template xmlns="http://schemas.haulmont.com/studio/template-settings.xsd"
          icon="resource://template/template_blank.svg"
          name="Entity fragment"
          order="90">
    <tags>
        <tag>ENTITY</tag>
        <tag>JPA</tag>
        <tag>FRAGMENT</tag>
    </tags>
    <description>
        <![CDATA[<html>Fragment associated with an entity. It differs from blank fragment in that it has data container defined for selected entity with given view.</html>]]>
    </description>

    <property caption="Entity"
              code="entity"
              propertyType="ENTITY"
              required="true"/>
    <property caption="Entity view"
              code="frameView"
              propertyType="VIEW"
              relatedProperty="entity"
              required="true"/>


    <property caption="Descriptor name"
              code="descriptorName"
              defaultValue="new-fragment"
              propertyType="DESCRIPTOR_NAME"
              required="true"
              dynamic="true"
              advanced="true"
              sourceName="descriptor"
              valueTemplate="${api.evaluateScript('screen/descriptorFileName.groovy', ['entity': entity])}-fragment">
        <dependency code="entity"/>
    </property>

    <property caption="Controller name"
              code="controllerName"
              propertyType="CLASS_NAME"
              defaultValue="NewFragment"
              required="true"
              dynamic="true"
              advanced="true"
              sourceName="controller"
              valueTemplate="${api.evaluateScript('screen/controllerNameByDescriptorName.groovy', ['descriptorName': descriptorName])}">
        <dependency code="descriptorName"/>
    </property>

    <property caption="Fragment id"
              code="id"
              propertyType="SCREEN_ID"
              defaultValue="new-fragment"
              advanced="true"
              dynamic="true"
              required="true"
              valueTemplate="${project_id}${controllerName}">
        <dependency code="controllerName"/>
    </property>

    <source fileExt="xml"
            name="descriptor"/>
    <source fileExt="java"
            name="controller"/>
    <source fileExt="groovy"
            name="controller"/>
    <source fileExt="kt"
            name="controller"/>
</template>
